<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="emptyListText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="attachementSectionTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/attachment_section_title</item>
    </style>

    <style name="main_tab_text">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_tab_text</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:drawablePadding">-5dip</item>
        <item name="android:background">@drawable/friend_tab_background</item>
    </style>

    <style name="friendTabTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/friend_tab_text</item>
        <item name="android:background">@drawable/friend_tab_background</item>
    </style>

    <style name="list">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:divider">@color/silver_divider</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:dividerHeight">1dip</item>
    </style>

    <style name="listOfUsers" parent="list">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="blueProgressBarInItem" parent="android:attr/progressBarStyleSmall">
        <item name="android:minWidth">32dip</item>
        <item name="android:maxWidth">32dip</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <style name="nameText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="edit">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#8c8c8c</item>
        <item name="android:background">@drawable/input_msg</item>
    </style>

    <style name="searchEdit" parent="edit">
        <item name="android:drawableLeft">@drawable/search_icon</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/search_hint_default</item>
    </style>

    <style name="registration_edit_text" parent="edit">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="blue_button">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/blue_button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blue_user_button" parent="blue_button">
        <item name="android:layout_marginLeft">27dip</item>
        <item name="android:layout_marginRight">27dip</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>