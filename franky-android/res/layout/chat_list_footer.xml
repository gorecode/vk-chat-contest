<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vk="http://schemas.android.com/apk/res/com.gorecode.vk"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="2dip"
    android:paddingLeft="3dip"
    android:minHeight="55dip"
    android:paddingRight="3dip"
    android:paddingTop="2dip" >

    <com.gorecode.vk.view.SafeViewFlipper
        android:id="@+id/flipper"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <com.gorecode.vk.view.TextViewCustomFont
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dip"
            android:textColor="#434f5e"
            android:textSize="16sp"
            vk:typeface="helvetica.ttf"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dip"
            android:textColor="#434f5e"
            android:textSize="16sp"
            vk:typeface="helvetica.ttf"
            android:visibility="invisible" />
    </com.gorecode.vk.view.SafeViewFlipper>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:indeterminateOnly="true"
        android:layout_marginRight="8dip"
        android:indeterminateDrawable="@drawable/blue_progress"
        android:layout_gravity="right|center_vertical" />

</LinearLayout>